<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:background="@color/mainbackground"
    app:cardBackgroundColor="@color/mainbackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainbackground">

        <ImageView
            android:id="@+id/home_cardview_image"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/slots_listbackground" />

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/poppins"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:text="hello"
            android:textAlignment="center"
            android:textColor="#FFEB3B"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/short_description_txt"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_below="@id/title_txt"
            android:fontFamily="@font/poppins"
            android:padding="1dp"
            android:text="dont worry no sugar gdfkgj sdfsdfs dsfsdfs dflkgjkld"
            android:textColor="#DCDCDC"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_read_more"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_below="@id/short_description_txt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:text="Read More" />

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_below="@+id/short_description_txt">

            <ImageButton
                android:id="@+id/img_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_thumb_up_18" />

            <ImageButton
                android:id="@+id/img_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_share_18" />

            <ImageButton
                android:id="@+id/img_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_info_18" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>